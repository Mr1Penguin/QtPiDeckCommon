{
    "version": 3,
    "cmakeMinimumRequired": {
	"major": 3,
	"minor": 20,
	"patch": 0
    },
    "configurePresets": [
	{
	    "name": "base",
	    "displayName": "Base configuration",
	    "description": "Base configuration using Ninja generator",
	    "binaryDir": "${sourceDir}/build/base",
	    "generator": "Ninja Multi-Config",
	    "toolchainFile": "${sourceDir}/ext/vcpkg/scripts/buildsystems/vcpkg.cmake",
	    "cacheVariables": {
		"VCPKG_MANIFEST_DIR": "${sourceDir}/vcpkg_manifests/base",
		"CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
	    }
	},
	{
	    "name": "linux-qt5",
	    "displayName": "Linux configuration with Qt5",
	    "description": "Configure for building on Linux Qt5",
	    "binaryDir": "${sourceDir}/build/linux",
	    "inherits": "base",
	    "cacheVariables": {
		"VCPKG_TARGET_TRIPLET": "x64-linux",
		"VCPKG_INSTALLED_DIR": "${sourceDir}/vcpkg_installed/linux-qt5"
	    }
	}
    ]
}
